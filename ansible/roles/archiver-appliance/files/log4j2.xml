<Configuration>
   <Appenders>
       <Console name="STDOUT" target="SYSTEM_OUT">
           <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
       </Console>
   </Appenders>
   <Loggers>
       <Logger name="org.apache.log4j.xml" level="${DEFAULT_LOG_LEVEL}"/>
       <Root level="${DEFAULT_LOG_LEVEL}">
           <AppenderRef ref="STDOUT"/>
       </Root>
   </Loggers>
</Configuration>
